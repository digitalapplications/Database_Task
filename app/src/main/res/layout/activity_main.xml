<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.databasetask.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/background"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Hot and Cold Fruits"
            android:id="@+id/textView"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hot Fruits"
        android:id="@+id/button1"
        android:onClick="hotFruitsintent"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cold fruits"
        android:id="@+id/button2"
        android:layout_marginTop="32dp"
        android:onClick="coldFruitsintent"
        android:layout_below="@+id/button1"
        android:layout_alignLeft="@+id/btn_addnew"
        android:layout_alignStart="@+id/btn_addnew" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Data"
        android:id="@+id/btn_addnew"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:onClick="addNew"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete fruit"
        android:id="@+id/button4"
        android:layout_below="@+id/btn_addnew"
        android:layout_alignLeft="@+id/btn_addnew"
        android:layout_alignStart="@+id/btn_addnew"
        android:layout_marginTop="32dp"
        android:onClick="deleteRow"/>
</RelativeLayout>
